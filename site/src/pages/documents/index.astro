---
import PageLayout from '../../layouts/PageLayout.astro';

const basePath = import.meta.env.BASE_URL.endsWith('/')
  ? import.meta.env.BASE_URL
  : `${import.meta.env.BASE_URL}/`;

const documents = [
  { name: 'Bylaws', file: 'bylaws.pdf', icon: 'üìú', description: 'Community rules and regulations' },
  { name: 'Architectural Guidelines', file: 'architectural-guidelines.pdf', icon: 'üè†', description: 'Standards for home improvements' },
  { name: 'Meeting Minutes', file: 'meeting-minutes.pdf', icon: 'üìã', description: 'Records of HOA meetings' },
];
---

<PageLayout title="Documents">
  <Fragment slot="title">
    <span class="bg-gradient-to-r from-emerald-400 to-teal-400 bg-clip-text text-transparent">Documents</span>
  </Fragment>

  <p class="mb-8 text-center text-lg text-slate-600">
    Access important HOA documents including bylaws, guidelines, and meeting minutes.
  </p>

  <div class="grid gap-4">
    {documents.map((doc) => (
      <a 
        href={`${basePath}docs/${doc.file}`} 
        class="group flex items-center gap-4 rounded-2xl border border-slate-200 bg-white p-6 shadow-sm transition hover:border-emerald-200 hover:shadow-md"
        target="_blank"
      >
        <div class="flex h-14 w-14 shrink-0 items-center justify-center rounded-xl bg-slate-100 text-2xl transition group-hover:bg-emerald-100">
          {doc.icon}
        </div>
        <div class="flex-1">
          <h2 class="text-lg font-semibold text-slate-900">{doc.name}</h2>
          <p class="text-sm text-slate-500">{doc.description}</p>
        </div>
        <div class="flex h-10 w-10 shrink-0 items-center justify-center rounded-full bg-slate-100 text-slate-400 transition group-hover:bg-emerald-500 group-hover:text-white">
          <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
        </div>
      </a>
    ))}
  </div>
</PageLayout>
