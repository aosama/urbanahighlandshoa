---
import PageLayout from '../../layouts/PageLayout.astro';

const basePath = import.meta.env.BASE_URL.endsWith('/')
  ? import.meta.env.BASE_URL
  : `${import.meta.env.BASE_URL}/`;
---

<PageLayout title="Documents">
  <h1 class="text-3xl font-semibold text-[#12212b]">Documents</h1>
  <p class="mt-3 text-[#3c4b57]">
    HOA documents (bylaws, guidelines, minutes) are available below.
  </p>
  <ul class="mt-6 space-y-3">
    <li>
      <a href={`${basePath}docs/bylaws.pdf`} class="text-[#2c5f2d] hover:underline" target="_blank">
        Bylaws (PDF)
      </a>
    </li>
    <li>
      <a href={`${basePath}docs/architectural-guidelines.pdf`} class="text-[#2c5f2d] hover:underline" target="_blank">
        Architectural Guidelines (PDF)
      </a>
    </li>
    <li>
      <a href={`${basePath}docs/meeting-minutes.pdf`} class="text-[#2c5f2d] hover:underline" target="_blank">
        Meeting Minutes (PDF)
      </a>
    </li>
  </ul>
</PageLayout>
