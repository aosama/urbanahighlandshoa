---
import BaseLayout from './BaseLayout.astro';
import { siteConfig } from '../lib/siteConfig';

const { title = siteConfig.orgName } = Astro.props;
const basePath = import.meta.env.BASE_URL.endsWith('/')
  ? import.meta.env.BASE_URL
  : `${import.meta.env.BASE_URL}/`;
---

<BaseLayout title={title}>
  <header class="bg-white/70 backdrop-blur border-b border-black/10">
    <div class="mx-auto flex max-w-[1100px] flex-wrap items-center justify-between gap-4 px-5 py-4">
      <a class="flex items-center gap-3 font-bold tracking-[0.4px]" href={basePath}>
        <img
          src={`${basePath}assets/UH-logo.jpg`}
          alt="Urbana Highlands HOA logo"
          class="h-11 w-11 rounded-xl shadow-[0_8px_18px_rgba(18,33,43,0.12)]"
          loading="eager"
        />
        <span>{siteConfig.siteName}</span>
      </a>

      <nav class="flex flex-wrap items-center gap-4 text-sm font-semibold text-[#214738]">
        <a class="hover:underline" href={basePath}>Home</a>
        <a class="hover:underline" href={`${basePath}announcements/`}>Announcements</a>
        <a class="hover:underline" href={`${basePath}events/`}>Events</a>
        <a class="hover:underline" href={`${basePath}documents/`}>Documents</a>
        <a class="hover:underline" href={`${basePath}contact/`}>Contact</a>
      </nav>

      <div class="flex flex-wrap gap-3">
        <a class="rounded-full border border-black/10 bg-white/70 px-4 py-2 text-sm font-semibold backdrop-blur transition hover:-translate-y-0.5 hover:shadow-[0_8px_18px_rgba(18,33,43,0.12)]" href={siteConfig.links.facebook} target="_blank" rel="noopener noreferrer">Facebook</a>
        <a class="rounded-full border border-black/10 bg-white/70 px-4 py-2 text-sm font-semibold backdrop-blur transition hover:-translate-y-0.5 hover:shadow-[0_8px_18px_rgba(18,33,43,0.12)]" href={siteConfig.links.poolPass} target="_blank" rel="noopener noreferrer">Pool Pass</a>
        <a class="rounded-full border border-[#2b5f47] bg-[#2b5f47] px-4 py-2 text-sm font-semibold text-white transition hover:-translate-y-0.5 hover:shadow-[0_8px_18px_rgba(18,33,43,0.12)]" href={siteConfig.links.residentPortal} target="_blank" rel="noopener noreferrer">Resident Portal</a>
      </div>
    </div>
  </header>

  <main class="flex-1 px-5 py-10">
    <div class="mx-auto max-w-[1100px]">
      <slot />
    </div>
  </main>

  <footer class="mt-auto bg-[#12212b] px-5 py-8 text-white/80">
    <div class="mx-auto flex max-w-[1100px] flex-col gap-3">
      <strong class="text-white">Management Company Contact</strong>
      <div class="flex flex-wrap gap-4">
        <span>To reach the management company, please call <strong class="text-white">{siteConfig.contact.managementPhone}</strong>.</span>
      </div>
      <div class="text-white/60">Urbana Highlands HOA Â· Resident Hub</div>
    </div>
  </footer>
</BaseLayout>
